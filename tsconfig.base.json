{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@botomatic/entities": ["libs/entities/src/index.ts"],
      "@botomatic/env/client": ["libs/env/client/src/index.ts"],
      "@botomatic/env/server": ["libs/env/server/src/index.ts"],
      "@botomatic/env/shared": ["libs/env/shared/src/index.ts"],
      "@botomatic/modules": ["libs/modules/src/index.ts"],
      "@botomatic/resolvers": ["libs/resolvers/src/index.ts"],
      "@botomatic/services": ["libs/services/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
